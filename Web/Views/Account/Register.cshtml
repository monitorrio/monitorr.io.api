@using System.Configuration
@using Web.Infrastructure.Extensions
@using Web.Models
@model RegisterViewModel
@{
    ViewBag.Title = @ConfigurationManager.AppSettings["ApplicationName"] + " User Registration";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container supplier-registration">
    @{ Html.RenderModule(ModuleExtensions.ModuleType.AlertPlaceholder); }
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <div class="panel panel-default panel-auth">
                <div class="panel-heading">
                    <img src="~/src/images/core/logo50.png" alt="@ConfigurationManager.AppSettings["ApplicationName"]">
                    <h3>@ViewBag.Title</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form id="user-registration-form" method="post" class="validator-form">
                                <section class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">First Name</label>
                                        <div class="col-md-8">
                                            <section class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                <input type="text" class="form-control" name="FirstName" data-bind="value: UserModel.FirstName">
                                            </section>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Last Name</label>
                                        <div class="col-md-8">
                                            <section class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                <input type="text" class="form-control" name="LastName" data-bind="value: UserModel.LastName">
                                            </section>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Username</label>
                                        <div class="col-md-8">
                                            <section class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-at"></i></span>
                                                <input type="text" class="form-control inputmask" data-inputmask="'alias': 'Email'" name="Email" data-bind="value: UserModel.Email">
                                            </section>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Password</label>
                                        <div class="col-md-8">
                                            <section class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                                <input type="password" class="form-control" name="Password" data-bind="value: UserModel.Password">
                                            </section>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Confirm Password</label>
                                        <div class="col-md-8">
                                            <section class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                                <input type="password" class="form-control" name="VerifyPassword" data-bind="value: UserModel.VerifyPassword">
                                            </section>
                                        </div>
                                    </div>
                                    <hr class="dotted">

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Secret Question</label>
                                        <div class="col-md-8">
                                            <select class="form-control"
                                                    name="SecretQuestion"
                                                    data-bind="options: VM.SecretQuestions,
                                                                                optionsText: 'SecretQuestionText',
                                                                                optionsValue: 'Id',
                                                                                value: UserModel.SecretQuestionId "></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Answer</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" name="SecretQuestionAnswer" data-bind="value: UserModel.SecretQuestionAnswer">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label"></label>
                                        <div class="col-md-8">
                                            <button type="button" class="btn btn-info pull-right" data-bind="click: VM.save">Submit Registration</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label"></label>
                                        <div class="col-md-8">
                                            @Html.ActionLink("Return to Login Page", "Login", null, new { @class = "pull-right" })
                                        </div>
                                    </div>
                                </section>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/src/js/app/component/account/RegistrationVM.js"></script>