@using System.Configuration
@model Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default panel-auth">
                <div class="panel-heading">
                    <img src="~/src/images/core/logo50.png" alt="@ConfigurationManager.AppSettings["ApplicationName"]">
                    <h3>Password Recovery</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-lg-8 col-lg-offset-2">
                                <hr class="clean">
                                <form role="form">
                                    <div class="form-group text-center">
                                        Enter your username to reset / unlock your password
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Enter User ID</label>

                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <span class="field-validation-error text-danger">@Html.ValidationSummary()</span>

                                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                                </form>
                                <hr>
                            </div>
                        }
                    </div>
                    <div class="row callouts">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="row padd-md">
                                    <div class="col-lg-12 text-center">
                                        @Html.ActionLink("Return to Login Page", "Login")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
