@using System.Configuration
@using Web.Infrastructure.Extensions
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="author" content="@ConfigurationManager.AppSettings["CompanyName"]">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/src/css/bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="~/src/css/plugins/calendar/calendar.css" />
    <link href="~/src/css/fontawesome/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,500,600,700,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/dist/css/app.css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/src/js/jquery/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/dist/js/knockout.js"></script>
</head>

<body>
    <!-- Preloader -->
    <div class="loading-container">
        <div class="loading">
            <div class="l1">
                <div></div>
            </div>
            <div class="l2">
                <div></div>
            </div>
            <div class="l3">
                <div></div>
            </div>
            <div class="l4">
                <div></div>
            </div>
        </div>
    </div>
    <!-- Preloader -->
    @RenderBody()
    <script src="~/src/js/plugins/underscore/underscore-min.js"></script>
    <script src="~/src/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/src/js/globalize/globalize.min.js"></script>
    <script src="~/src/js/plugins/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/dist/js/jquery.inputmask.bundle.js"></script>
    <!-- Bootstrap Validator -->
    <script src="~/src/js/plugins/bootstrap-validator/bootstrapValidator.min.js"></script>

    <script src="~/dist/js/app/app.js"></script>
    <script src="~/dist/js/app/core.js"></script>
    <script src="~/src/js/app/shared/api.js"></script>

    <input id="domain" type="hidden" value="@ConfigurationManager.AppSettings["domain"]" />
    @{ Html.RenderModule(ModuleExtensions.ModuleType.GoogleAnalytics); }
</body>

</html>
